<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zenstruck_media.slugify_filename_filter.class">Zenstruck\MediaBundle\Media\Filter\SlugifyFilenameFilter</parameter>
    </parameters>

    <services>
        <service id="zenstruck_media.slugify_filename_filter" class="%zenstruck_media.slugify_filename_filter.class%">
            <argument type="service" id="zenstruck.slugify" />
            <tag name="zenstruck_media.filename_filter" />
        </service>
    </services>
</container>